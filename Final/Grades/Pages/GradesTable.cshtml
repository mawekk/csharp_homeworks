@page
@using Grades.Data
@model Grades.GradesTable
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Табличка с оценочками</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
<div class="row mb-3 text-center">
<h2 class="col-sm-6">Вот такие оценочки:</h2>
</div>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Имя студента</th>
        <th>Предмет</th>
        <th>Оценка</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Grades.Data.StudentGrade p in Model.StudentGrades)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Subject</td>
            <td>@(p.Grade)</td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>