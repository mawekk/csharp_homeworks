@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WebCalc.Operators
@model WebCalc.Pages.Main
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Калькуляктор)</title>
</head>
<body>
<div>
    <form method="post">
        <p>
            <label asp-for="CalculationData.FirstOperand">Первое число:</label>
            <input asp-for="CalculationData.FirstOperand"/>
        </p>
        <p>
            <label asp-for="CalculationData.SecondOperand">Второе число:</label>
            <input asp-for="CalculationData.SecondOperand"/>
        </p>
        <p>
            <label>Операция</label>
            <select asp-for="CalculationData.Sign">
                @{
                    foreach (IOperator modelOperator in Model.Operators)
                    {
                        <option>@(modelOperator.GetSign())</option>
                    }
                }
            </select>
        </p>
        <button type="submit">Вычислить</button>
        <div>Результат: @(Model.Result is null ? "нажмите на кнопочку" : Model.Result)</div>
    </form>
</div>
</body>
</html>
